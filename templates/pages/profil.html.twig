{% extends 'base.html.twig' %}
{% block title %}Profil{% endblock %}
{% block body %}

    {% for message in app.flashes('success') %}
        <div class="text-center" style="margin-top: 1%">
            <div class="alert alert-success" role="alert" style="width: 35% ;margin: auto;">
                {{ message }}
            </div>
        </div>
    {% endfor %}

    <div class="card bg-light" style="width: 25rem; margin: auto; margin-top: 1%;">
        <img src="https://robohash.org/{{ app.user.mail }}" class="card-img-top rounded-circle" alt="...">
        <div class="card-body text-center">
            <h5 class="card-title">Bonjour <strong>{{ app.user.username }}</strong></h5>
            <p class="card-text">Mail: {{ app.user.mail }}</p>
            <p class="card-text">Instrument: {{ app.user.instrument.instruName }}</p>
            <p class="card-text">Style: {{ app.user.style.styleName }}</p>

            <p class="card-text">Groupe:
                {%  if app.user.groupe == 0 %}
                Non
                {% else %}
                Oui
                {% endif %}
            </p>
            {% if app.user.description != null %}
                <p class="card-text">Description: {{ app.user.description }}</p>
            {% else %}
                <p class="card-text">Editer votre profil et remplissez votre description ! </p>
            {% endif %}

            <a id="editPr" class="updateLink" href="{{ path('app_edit') }}" ><i class="far fa-edit"></i></a>
            <a id="editPr" class="updateLink" href="{{ path('app_delete', {'id': app.user.id}) }}" ><i class="fas fa-user-times"></i></a>
        </div>
    </div>



    <footer>
        <p>Â©Conrozier Dimitri</p>
    </footer>
{% endblock %}