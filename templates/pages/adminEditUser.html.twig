{% extends 'pages/dashboard.html.twig' %}

{% block title %}Edit User Profil{% endblock %}

{% block dashboard %}

    {{ form_start(editForm, {'method': 'POST', 'attr': {'class': 'formSignIn'} }) }}
    <div class="form-group">
        {{ form_row(editForm.username) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.mail) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.instrument) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.style) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.groupe) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.description) }}
    </div>
    <input type="hidden" name="_csrf_token"
