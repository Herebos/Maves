{% extends 'base.html.twig' %}
{% block title %}Recherche{% endblock %}
{% block body %}

    <!--Slide oklm-->
    <div id="carouselSearch" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="{{ asset('build/slide1.jpg') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="w-100" src="{{ asset('build/slide2.jpg') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="w-100" src="{{ asset('build/slide3.jpg') }}" alt="Third slide">
            </div>
        </div>
    </div>



    <!--Recherche de grp/zicos-->
    <div class="row" align="center">
        <div class="col">
            <p>
                <button class="btn btn-dark searchSolo" type="button" data-toggle="collapse" data-target="#rechercheSolo" aria-expanded="false" aria-controls="rechercheSolo">
                    Recherche un musicien !
                </button>
            </p>
            <div class="collapse" id="rechercheSolo">
                <form class="formSearch" method="post" action="resultat.php">
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Instrument</label>
                        <select class="form-control" id="exampleFormControlSelect1" name="Instrument">
                            <option value="Guitare">Guitare</option>
                            <option value="Bass">Bass</option>
                            <option value="Batterie">Batterie</option>
                            <option value="Triangle">Triangle</option>
                            <option value="Autre">Autre</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Style de musique</label>
                        <select multiple class="form-control" data-toggle="popover" data-trigger="focus" data-placement="right" data-content="Laissez CTRL appuyé pour séléctionner plusieurs option" name="Style">
                            <option value="Metal">Metal</option>
                            <option value="Jazz">Jazz</option>
                            <option value="Reggae">Reggae</option>
                            <option value="Pop">Pop</option>
                            <option value="Smooth">Smooth</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Groupe</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="groupe" id="inlineRadio1" value="1">
                            <label class="form-check-label" for="inlineRadio1">Oui</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="groupe" id="inlineRadio2" value="0">
                            <label class="form-check-label" for="inlineRadio2">Non</label>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-lg btn-outline-dark" name="cherche">
                </form>

            </div>
        </div>
    </div>


{% endblock %}